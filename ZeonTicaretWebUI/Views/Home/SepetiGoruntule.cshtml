@model ZeonTicaretWebUI.App_Classes.Sepet
@{
    ViewBag.Title = "SepetiGoruntule";
    Layout = "~/Views/Shared/SiteLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">

<body>
 
    <!-- ======================================================================
                                    START CONTENT
    ======================================================================= -->
    <div class="content">
        <div class="container">
            <h2>Shopping cart</h2>

            <div class="shopping-cart">
                <div class="shopping-cart-products">
                    <ul class="shopping-product-detail">
                        <li class="shopping-1">Product image</li>
                        <li class="shopping-2">Product name</li>
                        <li class="shopping-3">Description</li>
                        <li class="shopping-4">Quantity</li>
                        <li class="shopping-5">Unit price</li>
                        <li class="shopping-6">Total</li>
                    </ul>
                    @foreach (var item in Model.Urunler)
                    {
                        <ul class="shopping-product-detail">
                            <li class="shopping-1">
                                <img src="~/Content/Zeon/images/photos/image-14.jpg" alt="product image" />
                            </li>
                            <li class="shopping-2">
                                <a href="#">@item.Urun.Adi</a>
                                <p>@item.Urun.Aciklama</p>
                            </li>
                            <li class="shopping-3">
                                <p>Colour - blue</p>
                                <p>Size US (S)</p>
                            </li>
                            <li class="shopping-4">
                                
                                <p>@item.Adet</p>
                                
                            </li>
                            <li class="shopping-5">
                               @item.Urun.SatisFiyati
                            </li>
                            <li class="shopping-6">
                                @item.Tutar <button>x</button>
                            </li>
                        </ul>
                    }
                    <!-- REPEAT BY PRODUCT -->
                  
                   

                </div>

                <div class="row">
                    <div class="col-md-3">
                        <a href="#" class="button-7">Continue shopping</a>
                    </div>
                    
                    <div style="margin-left:450px;" class="col-md-4">
                        <div class="checkout-total">
                            <p>Toplam Tutar :@Model.Toplamtutar TL </p>
                            <p>TAX Total :0 TL </p>
                            
                            <hr />
                            <p>Total : $ 120</p>
                            <button class="button-6">Checkout</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ======================================================================
                                    END CONTENT
    ======================================================================= -->
   
    <!-- ======================================================================
                                    START SCRIPTS
    ======================================================================= -->
    <script src="~/Content/Zeon/js/modernizr.custom.63321.js" type="text/javascript"></script>
    <script src="~/Content/Zeon/js/jquery-1.10.0.min.js" type="text/javascript"></script>
    <script src="~/Content/Zeon/js/jquery-ui.min.js" type="text/javascript"></script>
    <script src="~/Content/Zeon/js/bootstrap.js" type="text/javascript"></script>
    <script src="~/Content/Zeon/js/placeholder.js" type="text/javascript"></script>
    <script src="~/Content/Zeon/js/imagesloaded.pkgd.min.js" type="text/javascript"></script>
    <script src="~/Content/Zeon/js/masonry.pkgd.min.js" type="text/javascript"></script>
    <script src="~/Content/Zeon/js/jquery.swipebox.min.js" type="text/javascript"></script>
    <script src="~/Content/Zeon/js/farbtastic/farbtastic.js" type="text/javascript"></script>
    <script src="~/Content/Zeon/js/options.js" type="text/javascript"></script>
    <script src="~/Content/Zeon/js/plugins.js" type="text/javascript"></script>
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
    <!-- ======================================================================
                                    END SCRIPTS
    ======================================================================= -->
</body>

</html>
