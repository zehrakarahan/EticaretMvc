@model IEnumerable<ZeonTicaretWebUI.Models.Urun>
@{
    ViewBag.Title = "Urunler";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<section class="panel">
    <header class="panel-heading">
        Ürünler
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <div class="clearfix">
                <div class="btn-group" style="margin-bottom:15px; margin-top:15px;">
                    <a href="/Admin/UrunEkle" class="btn btn-success">
                        Yeni Ürün <i class="icon-plus"></i>
                    </a>
                </div>
                
            </div>
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>                        <th>Ürün Adı</th>
                        <th>Açıklama</th>
                        <th>Alış Fiyatı</th>
                        <th>Satış Fiyatı</th>
                        <th>Kategori</th>
                        <th>Marka</th>
                        <th>Resim Ekle</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="">
                            <td>@item.Adi</td>
                            <td>@item.Aciklama</td>
                            <td>@item.AlisFiyati</td>
                            <td>@item.SatisFiyati</td>
                            <td>@item.Kategori.Adi</td>
                         
                             <td>@item.Marka.Adi</td>
                            <td><a class="delete" href="/Admin/UrunResimEkle/@item.Id">
                                <i class="icon-plus"></i></a></td>
                            <td><a class="edit" href="/Admin/UrunGuncelle/@item.Id">
                                <i class="icon-pencil"></i></a></td>
                            <td><a class="delete" href="/Admin/UrunSil/@item.Id">
                                <i class="icon-trash"></i></a></td>
                            
                        </tr>
                    }
                   
                    
                </tbody>
            </table>
        </div>
    </div>
</section>
