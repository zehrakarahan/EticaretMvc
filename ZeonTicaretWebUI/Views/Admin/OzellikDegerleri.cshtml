@model IEnumerable<ZeonTicaretWebUI.Models.OzellikDegeri>
@{
    ViewBag.Title = "OzellikDegerleri";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br /><br /><br /><br />
<section class="panel">
    <header class="panel-heading">
        Özellik Değerleri
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <div class="clearfix">
                <div class="btn-group" style="margin-bottom:15px; margin-top:15px;">
                    <a href="/Admin/OzellikDegeriEkle" class="btn btn-success">
                        Yeni Özellik Değeri<i class="icon-plus"></i>
                    </a>
                </div>

            </div>
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Özellik Değeri Adı</th>
                        <th>Açıklama</th>
                        <th>Özellik Tipi</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="">
                            <td>@item.Adi</td>
                            <td>@item.Aciklama</td>
                            @if (item.OzellikTip != null)
                            {
                                <td>@item.OzellikTip.Adi</td>
                            }

                            <td>
                                <a class="edit" href="/Admin/OzellikDegerGuncelle/@item.Id">
                                    <i class="icon-pencil"></i>
                                </a>
                            </td>
                            <td>
                                <a class="delete" href="/Admin/OzellikDegerSil/@item.Id">
                                    <i class="icon-trash"></i>
                                </a>
                            </td>

                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</section>

