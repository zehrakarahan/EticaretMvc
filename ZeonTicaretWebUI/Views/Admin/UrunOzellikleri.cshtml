@model IEnumerable<ZeonTicaretWebUI.Models.UrunOzellikleri>
@{
    ViewBag.Title = "Urun Ozellikleri";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<section class="panel">
    <header class="panel-heading">
       Ürün Özellikleri
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <div class="clearfix">
                <div class="btn-group" style="margin-bottom:15px; margin-top:15px;">
                    <a href="/Admin/UrunOzelligiEkle" class="btn btn-success">
                        Yeni Ürün Özellikleri <i class="icon-plus"></i>
                    </a>
                </div>

            </div>
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Ürün Adı</th>
                        <th>Özellik Tipi Adı</th>
                        <th>Özellik Değer Adı</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="">
                           
                                <td>@item.Urun.Adi</td>
                            
                            @if (item.OzellikTip != null)
                            {
                                <td>@item.OzellikTip.Adi</td>
                            }
                           @if (item.OzellikDegeri != null)
                           {
                            <td>@item.OzellikDegeri.Adi</td>
                           }
                          
                            

                            <td>
                                <a class="edit" href="#">
                                    <i class="icon-pencil"></i>
                                </a>
                            </td>
                            <td>
                                <a class="delete" href="@Url.Action("UrunOzellikSil","Admin",new { urunId=@item.UrunId,
                                                   tipId=@item.OzellikTip.Id,degerId=@item.OzellikDegeri.Id})">
                                    <i class="icon-trash"></i>
                                </a>
                            </td>

                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</section>

