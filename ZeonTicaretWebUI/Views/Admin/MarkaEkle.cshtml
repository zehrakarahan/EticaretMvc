
@{
    ViewBag.Title = "MarkaEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br /><br /><br /><br />
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Marka Ekle
            </header>
            <div class="panel-body">
                <div class="form">
                    <form class="cmxform form-horizontal tasi-form" id="commentForm" enctype="multipart/form-data" method="post" action="/Admin/MarkaEkle">
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2">Marka Adı:</label>
                            <div class="col-lg-10">
                                <input class="form-control" id="cname" name="Adi" minlength="2" type="text" required />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cemail" class="control-label col-lg-2">Açıklama</label>
                            <div class="col-lg-10">
                                <input class="form-control " id="cemail" type="text" name="aciklama" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Marka Resmi:</label>
                            <div class="controls col-md-9">
                                <div class="fileupload fileupload-new" data-provides="fileUpload">
                                    <span class="btn btn-white btn-file">
                                        <span class="fileupload-new"><i class="icon-paper-clip"></i> Resim Seç</span>
                                        
                                        <input type="file" class="default" name="fileupload" />
                                    </span>
                                   
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-danger" type="submit">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
</div>

