@model IEnumerable<ZeonTicaretWebUI.Models.Marka>
@{
    ViewBag.Title = "Markalar";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@section head{
<link href="~/Content/Admin/assets/fancybox/source/jquery.fancybox.css" rel="stylesheet" />

    }
<section class="panel">
    <header class="panel-heading">
        Markalar
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <div class="clearfix">
                <div class="btn-group" style="margin-bottom:15px; margin-top:15px;">
                    <a href="/Admin/MarkaEkle" class="btn btn-success">
                        Yeni Marka <i class="icon-plus"></i>
                    </a>
                </div>

            </div>
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Marka Adı</th>
                        <th>Açıklama</th>
                        <td>Resmi Göster</td>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="">
                            <td>@item.Adi</td>
                            <td>@item.Aciklama</td>
                            <td>
                                @if (item.Resim != null)
                                {
                                    <a class="fancybox" href="@item.Resim.Ortayol">
                                        <i class="icon-eye-open"></i>
                                    </a>
                                }
                               
                            </td>
                            <td>
                                <a class="edit" href="/Admin/MarkaGuncelle/@item.Id">
                                    <i class="icon-pencil"></i>
                                </a>
                            </td>
                            <td>
                                <a class="delete" href="/Admin/MarkaSil/@item.Id">
                                    <i class="icon-trash"></i>
                                </a>
                            </td>

                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</section>
<script src="~/Content/Admin/assets/fancybox/source/jquery.fancybox.js"></script>

<script type="text/javascript" >
      $(function() {
        //    fancybox
          jQuery(".fancybox").fancybox();
      });
</script>